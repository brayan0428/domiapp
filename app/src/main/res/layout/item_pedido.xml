<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:padding="10dp"
    android:layout_margin="5dp"
    android:id="@+id/cvItemPedido"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="10dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgProductoPedido"
                android:src="@drawable/ic_launcher_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginHorizontal="10dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold|italic"
                android:id="@+id/tvNombreProductoPedido"
                android:text="Nombre Producto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="italic"
                android:id="@+id/tvCantidadPedido"
                android:text="2 x $10.000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="italic"
                android:id="@+id/tvTotalPedido"
                android:text="Total: $20.000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btnEliminarProducto"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_corners"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Eliminar"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>